<div class="card mb-3">
    <div class="row">
        <div class="col-4">
            <img src="/images/<%= imageUrl %>" alt="" class="img-fluid">
        </div>
        <div class="col-8">
            <div class="card-body">
                <a href="/products/<%=id %>">
                    <h5 class="card-title"><%=name %></h5>
                </a>
                
                <p class="card-text"><%=price %></p>
            </div>
        </div>
    </div>
</div>